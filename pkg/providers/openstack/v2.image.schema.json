      "enum": [
        "debian",
        "redhat"
      ]
    },
    "unikorn:os:distro": {
      "type": "string",
      "enum": [
        "ubuntu",
        "rocky"
      ]
    },
    "unikorn:os:variant": {
      "type": "string"
    },
    "unikorn:os:codename": {
      "type": "string"
    },
    "unikorn:os:version": {
      "type": "string"
    },
    "unikorn:package:kubernetes": {
      "type": "string"
    },
    "unikorn:package:slurmd": {
      "type": "string"
    },
    "unikorn:gpu_vendor": {
      "type": "string",
      "enum": [
        "AMD",
        "NVIDIA"
      ]
    },
    "unikorn:gpu_models": {
      "type": "string",
      "pattern": "^\\w+(,\\w+)*$"
    },
    "unikorn:gpu_driver_version": {
      "type": "string"
    },
    "unikorn:virtualization": {
      "type": "string",
      "enum": [
